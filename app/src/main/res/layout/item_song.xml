<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="com.thanhtung.mp3downloader.model.Song" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_avatar"
                android:src="@mipmap/ic_launcher"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:id="@+id/tv_song_name"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/imv_avatar"
                android:textColor="#44C2F8"
                android:textSize="20sp"
                android:text="Hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_artist"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_song_name"
                android:textColor="#F3ADA9"
                android:textSize="20sp"
                android:text="Adele"
                android:layout_toEndOf="@id/imv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_artist"
                android:textColor="#F3ADA9"
                android:textSize="20sp"
                android:text="Lossless"
                android:layout_toEndOf="@id/imv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_song_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="101dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="37dp"
                android:layout_toEndOf="@id/tv_artist"
                android:text="8,888,888 lượt nghe"
                android:textColor="#F3ADA9"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>